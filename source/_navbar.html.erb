<div class="navbar-wagon">
  <!-- Logo -->
  <% link_to "/", class: "navbar-wagon-brand" do %>
    <%= image_tag "lewagon.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <!-- Text link -->
    <!-- <a href="https://www.lewagon.com" class="navbar-wagon-item navbar-wagon-link">Wagon</a> -->
    <%= link_to 'Wagon', 'https://www.lewagon.com', class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Text link -->
    <!-- <a href="" class="navbar-wagon-item navbar-wagon-link">Team</a> -->
    <%= link_to 'Team', '/team.html' %>

    <!-- Notification link-->
    <!-- <a href="#" class="navbar-wagon-item navbar-wagon-link"> -->
    <% link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
        <div class="badge badge-blue">3</div>
      </div>
    <% end %>
    <!-- </a> -->

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <!-- <img src="images/taco.jpg" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"> -->
        <%= image_tag "taco.jpg", "class" => "avatar dropdown-toggle", "id" => "navbar-wagon-menu", "data-toggle" => "dropdown" %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <!-- <li><a href="#">Profile</a></li> -->
          <li><%= link_to 'Profile', "#" %></li>
          <!-- <li><a href="#">Dashboard</a></li> -->
          <li><%= link_to 'Dashboard', "#" %></li>
          <!-- <li><a href="#">Log Out</a></li> -->
          <li><%= link_to 'Log Out', "#" %></li>
        </ul>
      </div>
    </div>



    <!-- Button (call-to-action) -->
    <!-- <a href="" class="navbar-wagon-item navbar-wagon-button btn">Post stuff</a> -->
    <%= link_to "Post stuff", "", class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <!-- <a href="#">Some mobile link</a> -->
          <%= link_to "Some mobile link", "#" %>
        </li>
        <li>
          <!-- <a href="#">Other one</a> -->
          <%= link_to "Other one", "#" %>
        </li>
        <li>
          <!-- <a href="#">Other one</a> -->
          <%= link_to "More garbage", "#" %>
        </li>
      </ul>
    </div>
  </div>
</div>
